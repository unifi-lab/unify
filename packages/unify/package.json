{
  "name": "@unify/server",
  "version": "1.0.0",
  "description": "A Hono-based SDK that maps entity configurations to REST API endpoints",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./migrations": {
      "types": "./dist/migrations/index.d.ts",
      "import": "./dist/migrations/index.js",
      "require": "./dist/migrations/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "hono",
    "rest",
    "api",
    "cli"
  ],
  "author": "osdodo",
  "license": "MIT",
  "dependencies": {
    "@orpc/client": "^1.4.5",
    "@orpc/server": "^1.4.5",
    "@orpc/zod": "^1.4.5",
    "hono": "^4.7.11",
    "zod": "^3.25.57"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "optionalDependencies": {
    "pg": "^8.11.3",
    "ts-node": "^10.9.0"
  },
  "peerDependencies": {
    "hono": "^4.7.11"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
