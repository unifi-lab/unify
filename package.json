{
  "name": "@unify-monorepo",
  "version": "1.0.0",
  "description": "A Hono-based SDK that maps entity configurations to REST API endpoints",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build:server": "cd packages/unify && bun run build",
    "dev:server": "cd packages/unify && bun run dev",
    "build:client": "cd packages/client && bun run build",
    "dev:client": "cd packages/client && bun run dev",
    "build:uniweb3": "cd packages/uniweb3 && bun run build",
    "dev:uniweb3": "cd packages/uniweb3 && bun run dev",
    "build:cli": "cd packages/cli && bun run build",
    "dev:cli": "cd packages/cli && bun run dev"
  },
  "author": "osdodo",
  "license": "MIT"
}
