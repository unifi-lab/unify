{
  "name": "unify-api-monorepo",
  "version": "1.0.0",
  "description": "A Hono-based SDK that maps entity configurations to REST API endpoints",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "scripts": {
    "build:api": "cd packages/unify-api && bun run build",
    "dev:api": "cd packages/unify-api && bun run dev",
    "build:plugin": "cd packages/plugins && bun run build",
    "dev:plugin": "cd packages/plugins && bun run dev",
    "build:client": "cd packages/client && bun run build",
    "dev:client": "cd packages/client && bun run dev",
    "build:cli": "cd packages/cli && bun run build",
    "dev:cli": "cd packages/cli && bun run dev"
  },
  "author": "osdodo",
  "license": "MIT"
}
