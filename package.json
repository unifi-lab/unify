{
  "name": "unify-server-monorepo",
  "version": "1.0.0",
  "description": "A Hono-based SDK that maps entity configurations to REST API endpoints",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "scripts": {
    "build-server": "cd packages/unify-server && bun run build",
    "dev-server": "cd packages/unify-server && bun run dev",
    "test-server": "cd packages/unify-server && bun test",
    "build-plugin": "cd packages/unify-plugin && bun run build",
    "dev-plugin": "cd packages/unify-plugin && bun run dev",
    "test-plugin": "cd packages/unify-plugin && bun run test",
    "build-all": "bun run build-server && bun run build-plugin"
  },
  "author": "osdodo",
  "license": "MIT"
}
